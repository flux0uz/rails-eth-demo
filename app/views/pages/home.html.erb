
<div class="container">
  <div class="d-flex justify-content-between my-3">
    <p>Your account: <span id="user-account"></span></p>
    <button class="btn btn-primary" id="metamask">Connect Metamask</button>
  </div>

  <div class="search mx-auto" style="width: 80%;">
    <h2>Create a new property</h2>
    <form action="/">
      <div class="form-group">
        <label>Name</label>
        <input type="text" id="name" class="form-control">
      </div>
      <div class="form-group">
        <label>Description</label>
        <input type="text" id="description" class="form-control">
      </div>
      <div class="form-group">
        <label>Price (ETH)</label>
        <input type="text" id="price" class="form-control">
      </div>
      <button type="submit" id="search" class="btn btn-primary">Create</button>
    </form>
  </div>
  <div class="properties my-4 mx-auto" style="width: 80%;">
  </div>
</div>

